; Polybar configuration

[bar/main]
width = 100%
height = 20
background = ${colors.bg0}
foreground = ${colors.fg}
border-color = ${colors.bg0}
border-top-size = 1
border-bottom-size = 2
line-size = 2
padding = 2
module-margin = 2
font-0 = Noto Sans:style=Medium:size=10:antialias=true;2
font-1 = Symbols Nerd Font:size=9:antialias=true;2
modules-left = bspwm
modules-center = xwindow
modules-right = date
wm-restack = bspwm
tray-position = right
tray-maxsize = 16
tray-padding = 2

[bar/laptop]
inherit = bar/main
modules-right = battery date

[colors]
blk   = #282828
red   = #cc241d
grn   = #98971a
ylw   = #d79921
blu   = #458588
mag   = #b16286
cyn   = #689d6a
wht   = #a89984
bblk  = #928374
bred  = #fb4934
bgrn  = #b8bb26
bylw  = #fabd2f
bblu  = #83a598
bmag  = #d3869b
bcyn  = #8ec07c
bwht  = #ebdbb2
bg0   = #282828
bg1   = #3c3836
fg    = #ebdbb2

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
format = <label-monitor> <label-state>
label-separator = " "
label-separator-padding = 0
label-monitor = %name%
label-monitor-padding = 2
label-monitor-foreground = ${colors.wht}
label-focused = %index%
label-focused-underline = ${colors.bylw}
label-focused-padding = 1
label-focused-background = ${colors.bg1}
label-occupied = %index%
label-occupied-underline = ${colors.bblu}
label-occupied-padding = 1
label-urgent = %index%
label-urgent-underline = ${colors.bred}
label-urgent-padding = 1
label-empty = %index%
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = " %title% "
label-maxlen = 100

[module/openvpn]
type = custom/script
format-prefix = " "
exec = openvpn-status.sh
interval = 4

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0b_00.3.analog-stereo
format-volume = <ramp-volume> <label-volume>
label-muted = "muted"
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "

[module/date]
type = internal/date
interval = 10
date = "%a %d %b"
time = %H:%M
label = %date% %time%

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC0
;
; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
;format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = Charging %percentage%%

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = Discharging %percentage%%

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500

