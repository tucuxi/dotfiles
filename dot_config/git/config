[alias]
	ci = commit
	co = checkout
	lg = log --color --graph --branches --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log '--pretty=format:%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]' --decorate --numstat
	lstags = tag --list --sort=-committerdate --format '%(refname:short) %(creatordate:short) %(subject)'
	st = status
[blame]
	coloring = highlightRecent
[branch]
	autosetuprebase = always
[commit]
	gpgsign = true
[core]
	autocrlf = input
[diff]
	renameLimit = 10000
	tool = meld
[init]
	defaultBranch = main
