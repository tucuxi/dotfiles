[global]
    frame_width = 1
    frame_color = "#dab997"
    separator_color = "#dab997"
    font = "sans-serif 9"
    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b> %p\n%b"

    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    stack_duplicates = yes
    hide_duplicate_count = false
    show_indicators = yes
    ignore_newline = no
    transparency = 15
    idle_threshold = 120
    follow = keyboard
    geometry = "300x5-4+32"
    padding = 8
    horizontal_padding = 10
    icon_position = left
    min_icon_size = 0
    max_icon_size = 32
    icon_path = /usr/share/icons/Papirus-Dark/24x24/status:/usr/share/icons/Papirus-Dark/24x24/actions:/usr/share/icons/Papirus-Dark/24x24/devices
    browser = /usr/bin/firefox -new-tab

[shortcuts]
    close = ctrl+del
    close_all = ctrl+shift+del
    history = ctrl+grave
    context = ctrl+shift+period

