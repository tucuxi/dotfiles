[global]
    frame_width = 1
    frame_color = "#dab997"
    separator_color = "#dab997"
    font = "sans-serif 9"
    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b> %p\n%b"

    word_wrap = no
    show_age_threshold = 60
    ignore_newline = no
    transparency = 15
    idle_threshold = 120
    follow = keyboard
    geometry = "0x4-4+32"
    padding = 8
    horizontal_padding = 10
    icon_position = left
    max_icon_size = 24
    icon_path = /usr/share/icons/Arc/status/24:/usr/share/icons/Arc/devices/24/
    browser = /usr/bin/firefox -new-tab

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282828"
    foreground = "#8a8a8a"
    timeout = 4

[urgency_normal]
    background = "#282828"
    foreground = "#dab997"
    timeout = 4

[urgency_critical]
