#
# wm independent hotkeys
#

# web browser
super + w
	$BROWSER

# screen shot
Print
	maim -q -u $HOME/Screenshots/$(date +%Y%m%d-%H%M%S-desktop).png

shift + Print
	maim -q -s -b 2 -u $HOME/Screenshots/$(date +%Y%m%d-%H%M%S-selection).png

ctrl + Print
	maim -q -u | xclip -selection clipboard -t image/png

ctrl + shift + Print
	maim -q -s -b 2 -u | xclip -selection clipboard -t image/png

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# increase audio volume
XF86AudioRaiseVolume
	volume.sh up

# decrease audio volume
XF86AudioLowerVolume
	volume.sh down

# toggle mute
XF86AudioMute
	volume.sh mute

# close topmost notification
ctrl + Delete
	dunstctl close

# close all notifications currently displayed
ctrl + shift + Delete
	dunstctl close-all
