# XDG directories
XDG_CONFIG_HOME                 DEFAULT=@{HOME}/.config
XDG_CACHE_HOME                  DEFAULT=@{HOME}/.cache
XDG_DATA_HOME                   DEFAULT=@{HOME}/.local/share
XDG_STATE_HOME                  DEFAULT=@{HOME}/.local/state

# Preferred applications
BROWSER				DEFAULT=firefox
DIFFPROG			DEFAULT=meld
EDITOR				DEFAULT=vis
PAGER				DEFAULT="less -R"
READER				DEFAULT=llpp
TERMINAL			DEFAULT=kitty
VISUAL				DEFAULT=vis

# gpg
SSH_AUTH_SOCK                   DEFAULT="${XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.ssh"

# Application settings
_JAVA_AWT_WM_NONREPARENTING     DEFAULT=1
_JAVA_OPTIONS                   DEFAULT=-Dawt.useSystemAAFontSettings=on
BC_ENV_ARGS                     DEFAULT=-q
FZF_DEFAULT_COMMAND             DEFAULT="fd --type f"
LESSHISTFILE                    DEFAULT="-"
HISTFILE                        DEFAULT="${XDG_CACHE_HOME}/history"
HISTSIZE                        DEFAULT=2000
MANPAGER                        DEFAULT="sh -c 'col -bx | bat -l man -p'"
QT_STYLE_OVERRIDE               DEFAULT=kvantum
SAVEHIST                        DEFAULT=2000
